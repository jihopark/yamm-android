<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <!-- Login Activity -->

    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#66ffffff</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textColorHint">#99ffffff</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/login_button_disabled_background</item>
        <item name="android:textColor">@color/login_button_disabled_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="SelectedText">
        <item name="android:textSize">16dp</item>
        <item name="android:background">#aa181818</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Battle Activity -->
    <style name="versus">
        <item name="android:textSize">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#87a2a2a2</item>
        <item name="android:gravity">left|center</item>
    </style>
    <style name="dish_item_text">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:background">#87a2a2a2</item>
    </style>
    <style name="dish_stream_text">
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
