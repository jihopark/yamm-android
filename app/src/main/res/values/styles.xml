<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/default_color</item>
        <item name="android:windowContentOverlay">@null</item>
        </style>

    <style name="SplashTheme">
        <item name="android:windowBackground">@color/default_color</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- Action Bar Tab -->
    <style name="TabStyle">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- FullScren Dialog -->

    <style name="FullScreenDialogText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffe5a46a</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Intro Activity -->
    <style name="IntroButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Login Activity -->

    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#66ffffff</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textColorHint">#99ffffff</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:background">@drawable/disabled_round_button</item>
        <item name="android:textColor">@color/button_disabled_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Join Activity -->
    <style name="JoinEditText">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColorHint">#ffaaa8a1</item>
        <item name="android:textColor">@color/join_text_color</item>
        <item name="android:background">@drawable/textlines</item>
    </style>

    <style name="VeriButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:radius">4dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="JoinConfirmButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/disabled_round_button</item>
        <item name="android:textColor">@color/button_disabled_text</item>
    </style>

    <style name="JoinErrorImage">
        <item name="android:src">@drawable/x_red</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="VeriSuccessImage" parent="JoinErrorImage">
        <item name="android:src">@drawable/done</item>
        <item name="android:layout_marginRight">14dp</item>
    </style>

    <style name="LoginErrorImage">
        <item name="android:src">@drawable/x</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ErrorToast">
        <item name="android:background">#b3430000</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Grid Activity -->

    <style name="GridIntroText">
        <item name="android:textColor">#ff0e7078</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="GridAllButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/button_enabled_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="MyButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="SelectedText">
        <item name="android:textSize">16dp</item>
        <item name="android:background">#aa181818</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Battle Activity -->
    <style name="versus">
        <item name="android:textSize">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#87a2a2a2</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="dish_stream_text">
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyledIndicators" parent="@style/YammActionBarTheme">
        <item name="vpiTabPageIndicatorStyle">@style/custom_tab_page_indicator</item>
    </style>

    <style name="custom_tab_page_indicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textColor">@color/default_color</item>
    </style>



    <!-- Main Activity -->
    <style name="YammMainButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">130dp</item>
    </style>

    <style name="CurrentLocationButton">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/friend_pick_round_button</item>
    </style>
    <style name="FriendPickButton">
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/friend_pick_round_button</item>
    </style>

    <style name="MainButton">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">89dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DislikeButton" parent="MainButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/main_dislike</item>
        <item name="android:background">@drawable/negative_main_circle</item>
    </style>

    <style name="SearchMapButton" parent="MainButton">
        <item name="android:src">@drawable/main_locate</item>
        <item name="android:background">@drawable/positive_main_circle</item>
    </style>

    <style name="PokeFriendButton" parent="MainButton">
        <item name="android:src">@drawable/main_yamm_select</item>
        <item name="android:background">@drawable/positive_main_circle</item>
    </style>

    <style name="NextButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">147dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/arrow_right</item>
        <item name="android:background">@drawable/arrow_circle</item>
    </style>

    <!-- Friends Fragment -->

    <style name="DatePickSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/time_spinner_background</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#ffa5a5a5</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpinnerItemDropDown" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#ff313131</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="RedButton">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#ffe0323b</item>
    </style>

    <style name="FriendConfirmButton" parent="RedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/friend_confirm_button_height</item>
    </style>
</resources>
