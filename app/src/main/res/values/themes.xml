<resources>
    <!-- the theme applied to the application or activity -->
    <style name="YammActionBarTheme"
        parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/YammActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="@android:attr/actionBarTabTextStyle">@style/TabStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerItemDropDown</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/YammActionBar</item>
        <item name="actionBarTabTextStyle">@style/TabStyle</item>
    </style>

    <style name="YammLogoActionBarTheme"
        parent="YammActionBarTheme">
        <item name="android:actionBarStyle">@style/YammLogoActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/YammLogoActionBar</item>
    </style>

    <style name="IntroTheme"
        parent="@style/Theme.AppCompat.Light">

        <item name="android:windowBackground">@color/default_color</item>
        <item name="android:windowNoTitle">true</item>

        </style>

    <!-- ActionBar styles -->
    <style name="YammActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/default_color</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/YammActionBar.Title</item>
        <item name="android:height">43dp</item>

        <!-- Support library compatibility -->
        <item name="background">@color/default_color</item>
        <item name="icon">@android:color/transparent</item>
        <item name="titleTextStyle">@style/YammActionBar.Title</item>
        <item name="height">43dp</item>
    </style>

    <style name="YammLogoActionBar"
        parent="YammActionBar">
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="android:icon">@drawable/yamm</item>

        <!-- Support library compatibility -->
        <item name="icon">@drawable/yamm</item>
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <!-- Custom Title Bars -->

    <style name="YammInviteActionBar"
        parent="YammLogoActionBar">
        <item name="android:icon">@drawable/title_text_invite</item>
        <item name="icon">@drawable/title_text_invite</item>
    </style>

    <style name="YammInviteActionBarTheme"
        parent="YammActionBarTheme">
        <item name="android:actionBarStyle">@style/YammInviteActionBar</item>
        <item name="actionBarStyle">@style/YammInviteActionBar</item>
    </style>

    <style name="YammLoginActionBar"
        parent="YammLogoActionBar">
        <item name="android:icon">@drawable/title_text_login</item>
        <item name="icon">@drawable/title_text_login</item>
    </style>

    <style name="YammLoginActionBarTheme"
        parent="YammActionBarTheme">
        <item name="android:actionBarStyle">@style/YammLoginActionBar</item>
        <item name="actionBarStyle">@style/YammLoginActionBar</item>
    </style>

    <style name="YammJoinActionBar"
        parent="YammLogoActionBar">
        <item name="android:icon">@drawable/title_text_signup</item>
        <item name="icon">@drawable/title_text_signup</item>
    </style>

    <style name="YammJoinActionBarTheme"
        parent="YammActionBarTheme">
        <item name="android:actionBarStyle">@style/YammJoinActionBar</item>
        <item name="actionBarStyle">@style/YammJoinActionBar</item>
    </style>

    <style name="YammGridActionBar"
        parent="YammLogoActionBar">
        <item name="android:icon">@drawable/title_text_hateselect</item>
        <item name="icon">@drawable/title_text_hateselect</item>
    </style>

    <style name="YammGridActionBarTheme"
        parent="YammActionBarTheme">
        <item name="android:actionBarStyle">@style/YammGridActionBar</item>
        <item name="actionBarStyle">@style/YammGridActionBar</item>
    </style>

    <style name="YammGroupRecommendationActionBar"
        parent="YammLogoActionBar">
        <item name="android:icon">@drawable/title_text_withfriend</item>
        <item name="icon">@drawable/title_text_withfriend</item>
    </style>

    <style name="YammGroupRecommendationActionBarTheme"
        parent="YammActionBarTheme">
        <item name="android:actionBarStyle">@style/YammGroupRecommendationActionBar</item>
        <item name="actionBarStyle">@style/YammGroupRecommendationActionBar</item>
    </style>


    <style name="YammPokeDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="YammActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>