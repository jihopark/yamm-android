<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Intro View Pager -->
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/intro_view_pager"/>
    <com.teamyamm.yamm.app.YammCirclePageIndicator
        android:id="@+id/intro_view_pager_indicator"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="2dp"
        app:pageColor="@android:color/transparent"
        app:fillColor="#c3ffffff"
        app:strokeColor="#c3ffffff"
        android:layout_above="@+id/intro_button_layout"
        android:layout_marginBottom="34dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/intro_button_layout">
        <Button
            style="@style/IntroButton"
            android:layout_marginBottom="14dp"
            android:textColor="#ffd55000"
            android:background="#99ffffff"
            android:text="@string/intro_join_button"
            android:id="@+id/join_button"/>
        <Button
            style="@style/IntroButton"
            android:layout_marginBottom="18dp"
            android:textColor="#ffffffff"
            android:background="#ccff6000"
            android:text="@string/intro_login_button"
            android:id="@+id/login_button"/>
    </LinearLayout>
</RelativeLayout>