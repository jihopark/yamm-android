<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_container">
        <TextView
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            style="@style/FullScreenDialogText"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tutorial_explanation_title"
            android:text="설명이 들어가야지\n설명이 들어갈 부분\n설명이 들어가자"/>
        <TextView
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            style="@style/FullScreenDialogText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/tutorial_explanation"
            android:text="설명이 들어가야지\n설명이 들어갈 부분\n설명이 들어가자"/>
    </LinearLayout>

    <Button
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text_container"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:background="@drawable/enabled_round_button"
        android:textColor="@color/button_enabled_text"
        android:textSize="22sp"
        android:id="@+id/start_button"
        android:text="@string/battle_intro_button"
        />
</RelativeLayout>