<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="342dp" android:layout_height="342dp"
    android:padding="1dp" android:background="#ffffffff">
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <com.teamyamm.yamm.app.YammImageView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/poke_alert_image"
            />
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="#bf000000"
            android:paddingLeft="12dp">
            <TextView
                android:layout_above="@+id/poke_alert_dish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#ffffffff"
                android:id="@+id/poke_alert_title"/>
            <TextView
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:textSize="24sp"
                android:textColor="#ffffffff"
                android:id="@+id/poke_alert_dish"/>
            </RelativeLayout>
        </RelativeLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/default_color"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        android:text="확 인"
        android:id="@+id/poke_alert_confirm"/>
</RelativeLayout>