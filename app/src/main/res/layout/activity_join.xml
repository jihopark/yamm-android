
<!-- Join Layout -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.teamyamm.yamm.app.JoinActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/join_layout"
    android:background="#fff3f0e6"
    >
    <EditText
        android:hint="@string/verification_name"
        android:id="@+id/name_field"
        style="@style/JoinEditText"
        android:inputType="textPersonName"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="@string/verification_email"
            android:id="@+id/email_field"
            style="@style/JoinEditText"
            android:inputType="textEmailAddress"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/JoinErrorImage"
            android:id="@+id/email_field_error"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="@string/verification_pw"
            android:id="@+id/pw_field"
            style="@style/JoinEditText"
            android:inputType="textPassword"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/JoinErrorImage"
            android:id="@+id/pw_field_error"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:hint="@string/verification_phone"
            android:id="@+id/phone_field"
            style="@style/JoinEditText"
            android:inputType="phone"
            />
        <Button
            style="@style/VeriButton"
            android:text="@string/verification_button"
            android:id="@+id/verification_button"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_button_disabled"
            android:textColor="@color/button_disabled_text"
            />
        <Button
            style="@style/VeriButton"
            android:text="@string/verification_resend_button"
            android:id="@+id/verification_resend_button"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_button_enabled"
            android:textColor="@color/button_enabled_text"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="@string/verification_field"
            android:id="@+id/verification_field"
            style="@style/JoinEditText"
            android:inputType="phone"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/VeriSuccessImage"
            android:id="@+id/veri_success_image"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/JoinErrorImage"
            android:id="@+id/veri_field_error"
            android:visibility="gone"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/agreement_checkbox"
            android:button="@drawable/checkbox_selector"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/agreement_textview"
            android:textColor="@color/agreement_text_color"/>
    </LinearLayout>
    <Button
        style="@style/JoinConfirmButton"
        android:id="@+id/join_confirm_button"
        android:text="@string/join_confirm_button"/>

</LinearLayout>


