<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/yamm_item_height"
    android:descendantFocusability="blocksDescendants">
    <TextView
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/yamm_item_margin"
        android:layout_toRightOf="@+id/yamm_item_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/yamm_item_name_text"/>
    <CheckBox
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/yamm_item_margin"
        android:layout_width="@dimen/yamm_item_checkbox"
        android:layout_height="@dimen/yamm_item_checkbox"
        android:id="@+id/yamm_item_check"
        android:button="@drawable/yamm_item_selector"
        />
</RelativeLayout>