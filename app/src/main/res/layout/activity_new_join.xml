<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_above="@+id/phone_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_field"
        android:inputType="text"
        android:hint="@string/verification_name"/>
    <EditText
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_field"
        android:inputType="phone"
        android:hint="@string/verification_phone"/>
    <EditText
        android:layout_below="@+id/phone_field"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_field"
        android:inputType="textPassword"
        android:hint="@string/verification_pw"/>
    <LinearLayout
        android:layout_below="@+id/password_field"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/agreement_checkbox"
            android:button="@drawable/checkbox_selector"/>
        <TextView
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/agreement_textview"
            android:textColor="@color/agreement_text_color"/>
    </LinearLayout>
    <Button
        android:layout_toRightOf="@+id/phone_auth_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ì™œ"
        android:id="@+id/phone_question"/>
    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_auth_request"
        android:text="@string/phone_auth_request_button"
        android:enabled="false"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/phone_auth_fragment_container"/>
</RelativeLayout>