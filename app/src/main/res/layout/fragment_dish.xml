<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.teamyamm.yamm.app.YammImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dish_image"/>
    <Button
        android:layout_above="@+id/description_layout"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dish_dislike_button"
        android:text="싫어요"/>
    <Button
        android:layout_toLeftOf="@+id/dish_dislike_button"
        android:layout_above="@+id/description_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_map_button"
        android:text="위치"
        />
    <Button
        android:layout_toLeftOf="@+id/search_map_button"
        android:layout_above="@+id/description_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poke_friend_button"
        android:text="찌르기"/>
    <Button
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dish_next_button"
        android:text=">"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_layout"
        android:background="#b4515151">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dish_comment_text"
            android:text="여친 입에 넣어주고 싶은"
            android:textColor="#ffffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dish_name_text"
            android:text="낫시고랭"
            android:textColor="#ffffffff"/>
    </LinearLayout>

</RelativeLayout>