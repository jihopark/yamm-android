<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.teamyamm.yamm.app.YammImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dish_image"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:layout_alignParentBottom="true"
        android:src="@drawable/main_imagebar"
        android:id="@+id/main_image_bar"/>
    <TextView
        android:layout_above="@+id/dish_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dish_comment_text"
        android:text="여친 입에 넣어주고 싶은"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dish_name_text"
        android:text="낫시고랭"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="16dp"/>

</RelativeLayout>