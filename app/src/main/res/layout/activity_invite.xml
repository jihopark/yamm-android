<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:paddingTop="14dp"
        android:src="@drawable/invite_message"
        android:background="@color/brown_color"
        />
    <com.viewpagerindicator.IconPageIndicator
        android:background="@color/brown_color"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:id="@+id/invite_page_indicator"
        />
    <android.support.v4.view.ViewPager
        android:layout_below="@+id/invite_page_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/invite_view_pager"/>
    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/invite_contact_confirm"
        android:id="@+id/invite_contact_confirm"
        android:visibility="gone"/>
</LinearLayout>